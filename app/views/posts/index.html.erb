<%= render "thread_info" %>
<ul class="post_list abnormal">
	<% for post in @posts %>
		<%= render(if post.soft_destroyed? then "deleted_post" else "post" end, :post => post) %>
	<% end -%>
</ul>
<%= render "thread_info" %>
<a name="reply"></a>
<% if can? :post, @rope %>
	<p><%= t('posts.reply') %></p>
	<%= render "reply_box", :post => Post.new %>
<% end %>

<% content_for :desc do %>
	<% @rope.posts.first.body %>
<% end %>
