<head>
	<meta charset="utf-8">

	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>
		<%- if content_for? :title -%>
			<%= content_for :title -%> &mdash; <%= @forum.name -%>
		<%- else -%>
			<%= @forum.name -%> admin panel
		<%- end -%>
	</title>

	<meta name="description" content="">
	<meta name="viewport" content="width=device-width">
	<meta name="controller" content="<%= controller_name %>">
	<meta name="action" content="<%= action_name %>">
	<meta name="currentUser" content="<%= current_user.id %>">
	<meta name="homeURL" content="<%= admin_root_path %>">


	<%= stylesheet_link_tag		"admin", :media => "all" %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div class="container_16">
		<header class="clearfix">
			<h1>admin panel</h1>
			<div class="user-data clearfix">
				<span class="welcome">welcome</span>
				<span class="user-name"><a href="#!/user/1">drderp</a></span>
			</div>
			<%= render "admin/nav" %>
		</header>
		<div class="wrapper">
			<%= yield %>
		</div>
	</div>

	<%= javascript_include_tag "admin" %>
	<!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

	<script src="js/main.js"></script>-->
</body>
</html>
